<h1>Users</h1>

<% @users.each do |user| %>
<div class="thumbnail-container">
  <div class="thumbnail">
    <%= image_tag user.avatar.url if user.avatar %>
    <div class="caption">
      <%= link_to "@#{user.username}", user_url(user) %>
      <p>
        <%= user.name %> <br>
        <%= user.city %>, <%= user.state %>
      </p>
    </div>
  </div>
</div>
<% end %>

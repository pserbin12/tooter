<!DOCTYPE html>
<html>
  <head>
    <title>Tooter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <% if user_signed_in? %>
          <p class="navbar-text">Signed in as @<%= current_user.username %></p>
          <%= link_to "Sign Out", destroy_user_session_url, method: :delete, class: "btn btn-default navbar-btn" %>
        <% else %>
          <%= link_to "Sign In", new_user_session_url, class: "btn btn-default navbar-btn" %>
        <% end %>
        <%= link_to "Home", root_url, class: "navbar-text"%>
        <%= link_to "Users", toot_users_url, class: "navbar-text"%>
        <%= link_to "Timeline", timeline_url, class: "navbar-text"%>

        <% if user_signed_in? %>
          <%= link_to "Profile", user_path(id: current_user.id), class: "navbar-text"%>
        <% end %>
      </div>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
